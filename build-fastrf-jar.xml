<?xml version="1.0"?>
<project name="fastrf" default="dist">
	<path id="compile.classpath">
		<fileset dir="lib" id="lib">
			<include name="*.jar"/>
		</fileset>
	</path>
	
	<target name="init"> 
		<mkdir dir="build/classes/"/>
		<mkdir dir="dist"/>
	</target>
	
	<target name="clean">
		<delete dir="build"/>
		<delete dir="dist"/>
	</target>
	<target name="compile" depends="init">
		<javac srcdir="src" destdir="build/classes" debug="true" target="1.7" source="1.7">
		<classpath refid="compile.classpath"/>
		</javac>
	</target>
    <target name="dist" depends="compile" description="generate the distribution">
 
        <!-- Put everything in ${build} into the MyApplication-${version}.${build.number}.jar -->
        <jar destfile="dist/fastrf.jar" basedir="build/classes" />
    </target>
	
</project>
